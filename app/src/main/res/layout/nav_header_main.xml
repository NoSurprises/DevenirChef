<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/header_navigation_image"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_drawer"
        android:layout_weight="0.54"
        android:adjustViewBounds="false"
        android:src="@android:drawable/sym_def_app_icon" />


    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_drawer"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        tools:text="Sample username" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_drawer"
            android:gravity="start"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            tools:text="sample@google.com" />

        <ImageButton
            android:id="@+id/email_options_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            app:srcCompat="@drawable/ic_exit_to_app_white_48px" />

    </RelativeLayout>

</LinearLayout>